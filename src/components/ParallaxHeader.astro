<!-- ðŸ”¹ CSS -->
<style>
/* ðŸ”¥ Reset Default Margins & Padding */
html, body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

/* ðŸ”¥ Full-Screen Parallax Video Header */
.parallax-header {
    position: relative;
    width: 100%;
    height: 100vh; /* Full-screen height */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    overflow: hidden;
    background: url('/bg.webp') no-repeat center center/cover; /* Fallback image */
}

/* ðŸ”¹ Video Container with Parallax */
.video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh; /* Ensure full height */
    overflow: hidden;
    will-change: transform;
}

/* ðŸ”¹ Background Video */
.bg-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
}

/* ðŸ”¹ Dark Overlay */
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4); /* Darken the video for readability */
    z-index: -1;
}

/* ðŸ”¹ Main Content Styling */
.maintext {
    position: relative;
    z-index: 1;
    max-width: 800px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.5); /* Slight background for readability */
    border-radius: 10px;
}

/* ðŸ”¹ Page Content Styling */
.content {
    height: 250vh; /* Extra scrolling space for strong parallax effect */
    padding: 100px;
    background: white;
    color: black;
}

/* ðŸ”¹ Mobile Optimization: Disable Video */
@media (max-width: 768px) {
    .bg-video {
        display: none; /* Hide video on mobile */
    }
    .parallax-header {
        background-attachment: scroll; /* No parallax on mobile */
    }
}
</style>

<!-- ðŸ”¹ JavaScript for Strong Parallax Effect -->
<script defer>
window.addEventListener("scroll", () => {
    const scrollPos = window.scrollY;
    const videoContainer = document.querySelector(".video-container");

    if (videoContainer) {
        videoContainer.style.transform = `translateY(${scrollPos * 0.5}px)`; // More intense parallax effect
    }
});
</script>

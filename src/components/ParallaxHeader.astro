<style>

h1 {
    font-size: 3em;
    color: white;
    text-transform: uppercase;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
}
/* ðŸ”¥ Full-Screen Parallax Video Header */
.parallax-header {
    position: relative;
    width: 100%;
    height: 100vh; /* Full-screen height */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

/* ðŸ”¹ Video Container with Parallax */
.video-container {
    position: fixed; /* Prevents background image from peeking through */
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -2;
    background: black; /* Placeholder background */
}

/* ðŸ”¹ Background Video */
.bg-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* ðŸ”¹ Main Content Styling */

/* Glass Effect on Text Box */
.maintext {
    position: relative;
    padding: 30px;
    max-width: 800px;
    border-radius: 12px;
    background-color:rgba(0, 0, 0, 0.6);
    text-align: center;
    background-blend-mode: overlay;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    color: white;
    border: 3px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
     -webkit-backdrop-filter: blur(10px); /* Safari Support */ 
    z-index: 0;
}
/* ðŸ”¹ Page Content Styling */
.content {
    height: 150vh; /* Extra scrolling space for strong parallax effect */
    padding: 100px;
}
/* Menu */
.menu {
    position: absolute; /* Stays at bottom of .main */
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-wrap: nowrap;  /* âœ… Prevents buttons from stacking */
    justify-content: center;
    gap: 10px;
    z-index: 2;
    padding: 10px;
}
/* Keep the Buttons Exactly the Same */
.button {
    line-height: 1;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: .75rem;
    background-color: rgba(10, 10, 10, 0.7);
    color: #fff;
    border-radius: 10rem;
    font-weight: 600;
    padding: .75rem 1.5rem;
    padding-left: 20px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: background-color .3s;
    width: 160px;
    border: 1px #ffffff solid;
}
.button__icon-wrapper {
    flex-shrink: 0;
    width: 25px;
    height: 25px;
    position: relative;
    color: var(--clr);
    background-color: #fff;
    border-radius: 50%;
    display: grid;
    place-items: center;
    overflow: hidden;
}
.button:hover {
    background-color: #000;
}
.button:hover .button__icon-wrapper {
    color: #000;
}
.button__icon-svg--copy {
    position: absolute;
    transform: translate(-150%, 150%);
}
.button:hover .button__icon-svg:first-child {
    transition: transform .3s ease-in-out;
    transform: translate(150%, -150%);
}
.button:hover .button__icon-svg--copy {
    transition: transform .3s ease-in-out .1s;
    transform: translate(0);
}
/* Responsive */
@media (max-width: 872px) {
    .main {
        flex-direction: column;
        padding: 40px 20px;
        justify-content: center;
        align-items: center;
    }
    .menu {
        flex-direction: row;
        flex-wrap: wrap;
        bottom: 10px;
    }
}
/* ðŸ”¹ Mobile Optimization: Disable Video */
@media (max-width: 768px) {
    .video-container {
        display: none; /* Hide video on mobile */
    }
    .parallax-header {
        background-attachment: scroll; /* No parallax on mobile */
    }
     .maintext {
        backdrop-filter: none !important;
        background: #000000;
        padding: 5px;
    }
     .menu {
        display: none;
        position: fixed;
        bottom: 10px;
    }
    .bg-video {
        display: none; /* Disable video for mobile */
    }
}
